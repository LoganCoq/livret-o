<page>
    <head>
        <meta charset="uth-8">
        <style>
            table
            {
                width: 100%;
            }
            .titre {
                font-size: 45px;
                white-space: nowrap;
                margin-bottom: 0;
                text-align: center;
            }
            .fifty-percent {
                width: 50%;
            }
            .athird-percent
            {
                width: 33%;
            }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <td class="fifty-percent">
                    <img src=".{{ asset('assets/images/IUTO.jpg') }}" alt="Logo IUT" style="max-height: 125px"/>
                </td>
            </tr>
        </table>
        <div class="title">
           <h1 class="titre">{{ intituleLivret }}</h1>
        </div>
        <table>
            <tr>
                <td class="athird-percent">
                    Départements :
                    {% for dpt in departements %}
                        {{ dpt }}
                    {% endfor %}
                </td>
                <td class="athird-percent">
                    Promotions :
                    {% for prom in promotions %}
                        {{ prom }}
                    {% endfor %}
                </td>
                <td class="athird-percent">
                    Année : {{ minYear }} - {{ maxYear }}
                </td>
            </tr>
        </table>
    </body>
</page>