<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8"/>
    <title>
        {% block title %}
            Livret'O
        {% endblock %}
    </title>
    <link rel="shortcut icon" href="/web/LIVRETO.ico" />
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/font-awesome.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap-overload.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/src.css') }}">
    {% endblock %}
</head>

<body background="{{ asset('assets/images/cork-wallet.png') }}">
{% block body %}
    {% block navbar %}
        <div id="wrapper">
            <div id="sidebar-wrapper">
                <nav id="spy">
                    <ul class="sidebar-nav nav">
                        <li class="sidebar-brand active">
                            <p id="statutCAS">
                                <a href="{{ routing_statutCAShome }}" class="statCAS">{{ statutCAS|capitalize }}</a>
                            </p>
                        </li>
                        <br/>
                        {% for i in range(0, info|length - 1) %}
                            <li class="sidebar-brand options">
                                <a href="{{ routing_info[i] }}">{{ info[i] }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
                <div style="position:absolute ;bottom: 1%; width: 90%;text-align:center; margin-left: 5%;">
                    <img src="{{ asset('assets/images/IUTO_transp.png') }}" alt="Logo IUT" style="max-height: 125px"/>
                    <a href="https://goo.gl/forms/HxRlrZnElph8aSSU2">
                        <button type="button" class="btn btn-primary" style="width: 100%">
                            Rapport d'erreur / amélioration
                        </button>
                    </a>
                    {% if statutCAS != "Public" %}
                        <a href="{{ path('iuto_livret_logout') }}">
                            {#TODO style#}
                            <button type="button" class="btn btn-danger" style="width: 100%">
                                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                                Déconnexion
                            </button>
                        </a>
                    {% else %}
                        <a href="{{ path('iuto_livret_homepage') }}">
                            {#TODO style#}
                            <button type="button" class="btn btn-danger" style="width: 100%">
                                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                                Retour à l'authentification
                            </button>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endblock %}
    {% block page %}
        <div id="content">
            {% block content %}{% endblock %}
        </div>
    {% endblock %}
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.js"></script>
    <script src="{{ asset('assets/js/bootstrap.js') }}"></script>
{% endblock %}
</body>
</html>
