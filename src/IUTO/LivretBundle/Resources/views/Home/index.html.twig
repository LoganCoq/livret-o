<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title> {% block title %} Accueil {% endblock %} </title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/font-awesome.min.css  ') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap-overload.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/src.css') }}">
    {% endblock %}
</head>
<body background="{{ asset('assets/images/shattered.png') }}">
{% block body %}
    <div></div>
    {% block page %}
        <div id="contenthome">
            {% block content %}
                <h1 class="title_accueil"> Bienvenue sur le générateur de livret de projets </h1>
                <div class="buttons_accueil">
                    <button type="button" class="btn btn-default" id="btn_accueil"
                            onclick="window.location.href='{{ onclick }}'"> Utilisateurs de l'université <br/>
                        (personnels et étudiants)
                    </button>
                    <button type="button" class="btn btn-default" id="btn_accueil"
                            onclick="window.location.href='{{ modulePublic }}'"> Public</button>
                </div>
                <div style="text-align:center"><img src="{{ asset('assets/images/IUTO_transp.png') }}" alt="Logo IUT" style="max-height: 200px"/></div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
