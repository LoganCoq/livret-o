{% extends "base.html.twig" %}


{% block title %}

    Suppression - {{ parent() }}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/confirmDelete.css') }}">
{% endblock %}

{% block content %}


    <h2>Supprimer</h2>
    <p id="message_confirm">
        Etes-vous certain de vouloir supprimer le projet "{{ projet.intituleProjet }}" ?
    </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('iuto_livret_teacher_deleteProjet', {'projet': projet.id}) }}" method="post">
        <a href="{{ path('iuto_livret_correctionProf1') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour au choix des projets
        </a>
        {% if projet.validerProjet != true %}
            <input type="submit" value="Supprimer" class="btn btn-danger" id="btn_delete"/>
            {# Ceci va générer le champ CSRF #}
            {{ form_rest(form) }}
        {% endif %}
    </form>

{% endblock %}
