{% extends 'base.html.twig' %}

{% block content %}

    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {# affichage du message#}
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}

    <div class="div_home">
        <h1 class="h1_home">
            {{ statutCAS|capitalize }}
            <br/>
            <small>Connect√©(e) en tant que : {{ user.prenomUser }} {{ user.nomUser }}</small>
        </h1>
        {% for o in range(0, options|length - 1) %}
            <a href="{{ routing_options[o] }}" class="buttonhome">{{ options[o] }}</a>
        {% endfor %}
    </div>
{% endblock %}
