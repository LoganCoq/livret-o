{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset("assets/css/chooseProjectStudent.css") }}"/>

    <style type="text/css">
        #choose_project_name
        {
            margin-left: 1em;
            margin-top: 0.5em;
            font-size: 1.5em;
            width: 20em;
        }

        #livret_modif_btn
        {
            margin-top: -4.7em;
            margin-left: 32em;
        }
        #livreto_see_btn
        {
            margin-top: -4.7em;
            margin-left: 5em;
        }
        #livreto_see_finished_btn
        {
            margin-top: -4.7em;
            margin-left: 32em;
        }
        .list-group-item
        {
            padding: 0.2em;
            margin: 0.2em;
            height: auto;
            width: 61em;
            margin-left: 4em;
        }

        #livret_btn_goto_home
        {
            font-size: 1.2em;
            margin-top: 2em;
        }

    </style>

{% endblock %}

{% block content %}

    <a type="button" href="{{ path('iuto_livret_studenthomepage') }}" class="btn btn-success" id="livret_btn_goto_home">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        Accueil
    </a>

    <div id="all_projects">
        <h1>Projets :</h1>
        {#section pour les projet en cours de réalisation#}
        <div id="choose_project_enCours">
            <h2>Projets en cours</h2>
            {% if projetsSuivis|length > 0 %}
                <ul class="list-group">
                {% for projet in projetsSuivis %}
                    <li class="list-group-item">
                        <p id="choose_project_name">{{ projet.intituleProjet }}</p>
                        <a href="{{ path('iuto_livret_completeProject', {'projet': 'x'}) }}" class="btn btn-warning" id="livret_modif_btn">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            Modifier le projet
                        </a>
                        <a href="/generate/{{ projet.id }}" class="btn btn-success" id="livreto_see_btn">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            Aperçu du projet
                        </a>
                    </li>
                {% endfor %}
                </ul>
            {% else %}
                <p>Vous n'avez pas de projets en cours.</p>
            {% endif %}
        </div>
        {#section pour les projets terminés#}
        <div id="choose_project_fini">
            <h2>Projets finis</h2>
            {% if projetsFinis|length > 0 %}
                <ul class="list-group">
                    {% for projet in projetsFinis %}
                        <li class="list-group-item">
                            <p id="choose_project_name">{{ projet.intituleProjet }}</p>
                            <a href="/generate/{{ projet.id }}" class="btn btn-success" id="livreto_see_finished_btn">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                Aperçu du projet
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Vous n'avez pas de projets finis.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
