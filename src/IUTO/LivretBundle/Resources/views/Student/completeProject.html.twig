{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap/3/css/bootstrap.css"/>

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.min.css"/>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css"/>
    <style type="text/css">
        /**
         * Override feedback icon position
         * See http://formvalidation.io/examples/adjusting-feedback-icon-position/
         */
        #eventForm .form-control-feedback {
            top: 0;
            right: -15px;
        }

        .statCAS {
            padding: 1.1em 1.05em 0.4em 1.05em;
        }

        .form-complete{
            margin-right: 23em;
        }


    </style>
{% endblock %}


{% block content %}
    <div class="form-complete">
        {% form_theme form 'bootstrap_3_layout.html.twig' %}
        {{ form(form) }}
    </div>
    <div class="popup-box">
        <div class="popup-head">
            <div class="popup-head-left">
                Correction
            </div>
        </div>


        <div class="popup-messages">

            <div class="direct-chat-messages">

                {% if commentaires|length > 0 %}
                    {% for o in range(0, commentaires|length - 1) %}
                        {% if o != 0 %}
                            {% if commentaires[o][2] != commentaires[o-1][2] %}
                                <div class="chat-box-single-line">
                                    <abbr class="timestamp"> {{ commentaires[o][2]|date('d-m-Y') }} </abbr>
                                </div>
                            {% endif %}
                        {% endif %}

                        {% if o == 0 %}
                            <div class="chat-box-single-line">
                                <abbr class="timestamp"> {{ commentaires[o][2]|date('d-m-Y') }} </abbr>
                            </div>
                        {% endif %}

                        {% if commentaires[o][3] == "Etudiant" %}
                            <div class="direct-chat-msg-left">
                                <div class="direct-chat-info clearfix">
                                    <span class="direct-chat-name-left"> {{ commentaires[o][0] }} </span>
                                </div>
                                <div class="direct-chat-text-left">
                                    {{ commentaires[o][1] }}
                                </div>
                            </div>
                        {% endif %}

                        {% if commentaires[o][3] == "Enseignant" %}
                            <div class="direct-chat-msg-right">
                            <div class="direct-chat-info-right clearfix">
                                <span class="direct-chat-name-right">{{ commentaires[o][0] }}</span>
                            </div>
                            <div class="direct-chat-text-right">
                                {{ commentaires[o][1] }}
                            </div>
                        {% endif %}
                        </div>


                    {% endfor %}
                {% endif %}

            </div>


            <div class="reponseCorrection">
                {% form_theme form 'bootstrap_3_layout.html.twig' %}
                {{ form(formCom) }}
            </div>

        </div>
    </div>



{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>

    <script src="bootstrap-datepicker.fr.js" charset="UTF-8">
        $('.datepicker').datepicker({
            autoclose: true
        });
    </script>

{% endblock %}