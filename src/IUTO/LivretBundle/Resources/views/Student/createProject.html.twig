{% extends 'base.html.twig' %}

{% block content %}
    <div class="form">
          <div class="form-group row">
              <label for="title" class="col-2 col-form-label">Titre</label>
              <div class="col-2">
                  <input class="form-control" type="text" value="Projet" id="title">
              </div>
          </div>
          <div class="form-group row">
            <label for="participant" class="col-2 col-form-label">Participants</label>
            <div class="col-2">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Rechercher</button>
                </span>
              </div>
              <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Etudiants trouv√©s</button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenu2"></div>
              </div>
              <div class="from-group row">
                <button type="button" class="btn btn-default" aria-label="Left Align">
                  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
              </div>
            </div>
          </div>
            <div class="form-group row">
              <label for="anneeDebut" class="col-2 col-form-label">Annee</label>
              <div class="col-2">
                <input class="form-control" type="text" value={{anneeDebut}} id="annee">
            </div>
          </div>
          <div class="form-group row">
            <label for="departement" class="col-2 col-form-label">Departement</label>
            <div class="col-2">
                <input class="form-control" type="text" value={{departement}} id="departement" disabled>
            </div>
          </div>
          <div class="form-group row">
            <label for="formation" class="col-2 col-form-label">Formation</label>
            <div class="col-2">
                <input class="form-control" type="text" value={{formation}} id="formation" disabled>
            </div>
          </div>
          <div class="form-group row">
            <label for="professeur" class="col-2 col-form-label">Professeur</label>
            <div class="col-2">
                <input class="form-control" type="text" value={{formation}} id="formation" disabled>
            </div>
          </div>
          <div class="form-group row">
            <button type="submit" class="btn btn-primary">Suivant</button>
          </div>
    </div>
{% endblock %}
